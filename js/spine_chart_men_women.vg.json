{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Rankings of Continents 1960-2020 By Medals Won",
  "width": "container",
  "height": 600,
  "description": "Spine chart",
  "data": {
    "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/data/Total_Medals_Rankings_By_Continent/summer_paralympics_with_continents.csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2020,
        "step": 4,
        "name": "Year:  "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Year == Year_selection" },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "P_Total",
          "as": "smP_Total"
        },
        {
          "op": "sum",
          "field": "Men",
          "as": "smMen"
        },
        {
          "op": "sum",
          "field": "Women",
          "as": "smWomen"
        }
      ],
      "groupby": ["Continent"]
    },
    {
      "calculate": "(datum.smMen-datum.smWomen)/datum.smP_Total",
      "as": "Men%"
    },
    { "calculate": "datum.smWomen", "as": "Women%" },
    { "fold": ["Men%"], "as": ["key", "value"] }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "opacity": 1
      },
      "encoding": {
        "y": {
          "field": "Continent",
          "type": "nominal"
        },
        "x": { "field": "value", "type": "quantitative" },
        "color": { "field": "key" },
        "tooltip": [
          {
            "field": "value",
            "type": "quantitative",
            "title": "Medals",
            "format": ".2f"
          },
          { "field": "Continent", "type": "nominal" }
        ]
      }
    }
  ],
  "config": {
    "font": "Open Sans",
    "title": { "fontSize": 20 },
    "background": "aliceblue"
  }
}

{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "% Of Difference Between Men And Women Athletes",
    "subtitle": "The Lower The %, The More Balanced The Genders Are (No Difference)"
  },
  "width": "container",
  "height": 300,
  "description": "Spine chart",
  "data": {
    "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/data/Total_Medals_Rankings_By_Continent/summer_paralympics_with_continents.csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2020,
        "step": 4,
        "name": "Year:  "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Year == Year_selection" },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "P_Total",
          "as": "smP_Total"
        },
        {
          "op": "sum",
          "field": "Men",
          "as": "smMen"
        },
        {
          "op": "sum",
          "field": "Women",
          "as": "smWomen"
        }
      ],
      "groupby": ["Continent"]
    },
    {
      "calculate": "((datum.smMen-datum.smWomen)/datum.smP_Total)*100",
      "as": "Men_percent"
    }
  ],

  "encoding": {
    "x": {
      "field": "Men_percent",
      "type": "quantitative",
      "axis": null
    },
    "y": {
      "field": "Continent",
      "type": "nominal",
      "axis": { "title": null, "labelFontSize": 18 }
    },
    "color": {
      "field": "Continent",
      "legend": null,
      "scale": {
        "range": [
          "#1b9e77",
          "#d95f02",
          "#7570b3",
          "#e7298a",
          "#66a61e",
          "#e6ab02",
          "#a6761d"
        ]
      }
    },
    "tooltip": [
      {
        "field": "Men_percent",
        "type": "quantitative",
        "title": "There Are More Men Than Women Athletes By",
        "format": ".2f"
      }
    ]
  },
  "layer": [
    {
      "mark": { "type": "bar" }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "fontSize": 18,
        "dx": 5
      },
      "encoding": {
        "text": {
          "field": "Men_percent",
          "type": "quantitative",
          "format": ".0f"
        }
      }
    }
  ],
  "config": {
    "title": {
      "fontSize": 20,
      "anchor": "start",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 14
    },
    "background": "aliceblue",
    "autosize": { "resize": true },
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}

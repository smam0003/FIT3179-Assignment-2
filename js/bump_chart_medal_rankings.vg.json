{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Rankings of Continents 1960-2020 By Medals Won",
  "width": 1000,
  "height": 800,
  "description": "Bump chart",
  "data": {
    "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/data/Total_Medals_Rankings_By_Continent/total_medals_per_country_rankings_by_continent_final_enhanced[test].csv"
  },
  "params": [
    {
      "name": "Select_medal",
      "bind": {
        "input": "select",
        "options": [null, "Total", "Gold", "Silver", "Bronze"],
        "labels": [
          "Select one",
          "Total Medals",
          "Gold Medals",
          "Silver Medals",
          "Bronze Medals"
        ],
        "name": "Select Medal Type: "
      }
    }
  ],
  "transform": [{ "filter": "datum.Type == Select_medal" }],
  "layer": [
    {
      "params": [
        {
          "name": "Highlight_continent",
          "select": { "type": "point", "fields": ["Continent"] },
          "bind": "legend"
        }
      ],
      "mark": { "type": "line", "size": 10 },
      "encoding": {
        "x": { "field": "Year", "type": "ordinal" },
        "y": {
          "field": "Ranking_total_medal",
          "type": "ordinal",
          "title": "Ranking of medal"
        },
        "color": { "field": "Continent" },
        "opacity": {
          "condition": { "param": "Highlight_continent", "value": 1 },
          "value": 0.1
        }
      }
    },
    {
      "mark": { "type": "circle", "size": 250 },
      "encoding": {
        "x": { "field": "Year", "type": "ordinal" },
        "y": {
          "field": "Ranking_total_medal",
          "type": "ordinal",
          "title": "Ranking of medal"
        },
        "color": { "field": "Continent" },
        "opacity": {
          "condition": { "param": "Highlight_continent", "value": 1 },
          "value": 0.1
        },
        "tooltip": [
          { "field": "Continent", "type": "nominal" },
          {
            "field": "Ranking_total_medal",
            "type": "ordinal",
            "title": "Ranking of medal"
          },
          { "field": "Year", "type": "ordinal" }
        ]
      }
    }
  ],
  "config": { "font": "Open Sans", "title": { "fontSize": 20 } }
}

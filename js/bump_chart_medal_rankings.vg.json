{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Ranking of Continents By Medals Won From 1960-2020",
    "subtitle": "The Lower The Rank, The Higher The Medals Won"
  },
  "width": "container",
  "height": 500,
  "description": "Bump chart",
  "data": {
    "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/data/Total_Medals_Rankings_By_Continent/total_medals_per_country_rankings_by_continent_final_enhanced[test].csv"
  },
  "params": [
    {
      "name": "Select_medal",
      "bind": {
        "input": "select",
        "options": [null, "M_Total", "Gold", "Silver", "Bronze"],
        "labels": [
          "Select one",
          "Total Medals",
          "Gold Medals",
          "Silver Medals",
          "Bronze Medals"
        ],
        "name": "Select Medal Type: "
      }
    }
  ],
  "transform": [{ "filter": "datum.Type == Select_medal" }],
  "layer": [
    {
      "params": [
        {
          "name": "Highlight_continent",
          "select": { "type": "point", "fields": ["Continent"] },
          "bind": "legend"
        }
      ],
      "mark": { "type": "line", "size": 10, "strokeCap": "round" },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": { "labelFontSize": 18, "title": null }
        },
        "y": {
          "field": "Ranking_medal",
          "type": "ordinal",
          "axis": { "labelFontSize": 18, "title": null }
        },
        "color": {
          "field": "Continent",
          "scale": {
            "range": [
              "#1b9e77",
              "#d95f02",
              "#7570b3",
              "#e7298a",
              "#66a61e",
              "#e6ab02",
              "#a6761d"
            ]
          }
        },
        "opacity": {
          "condition": { "param": "Highlight_continent", "value": 1 },
          "value": 0.15
        }
      }
    },
    {
      "mark": { "type": "circle", "size": 250 },
      "encoding": {
        "x": { "field": "Year", "type": "ordinal", "title": null },
        "y": {
          "field": "Ranking_medal",
          "type": "ordinal",
          "axis": { "labelFontSize": 18, "title": null }
        },
        "color": {
          "field": "Continent",
          "legend": {
            "title": "Continents (Click to Filter)",
            "orient": "bottom",
            "titleFontSize": 12,
            "symbolSize": 300
          }
        },
        "opacity": {
          "condition": { "param": "Highlight_continent", "value": 1 },
          "value": 0.15
        },
        "tooltip": [
          { "field": "Ranking_medal", "type": "ordinal", "title": "Rank" },
          { "field": "Year", "type": "ordinal" },
          { "field": "Continent", "type": "nominal" },
          {
            "field": "Medal_Per_Country",
            "type": "quantitative",
            "title": "Medal Per Country"
          }
        ]
      }
    }
  ],
  "config": {
    "title": {
      "fontSize": 20,
      "anchor": "start",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 14
    },
    "background": "aliceblue",
    "autosize": { "resize": true },
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}

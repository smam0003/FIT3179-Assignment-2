{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bump chart",
  "data": {
    "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/data/Normalised%20Para%201960-2020/summer_paralympics.csv"
  },
  "layer": [
    
    {
      "transform": [
        { "filter": "datum['Country_Code'] == 'USA'|| datum['Country_Code'] == 'ITA'"},
        { "filter": "datum['Year'] == '1960'"},
        {
          "window": [{ "op": "rank", "as": "ranking" }],
          "sort": [{ "field": "M_Total", "order": "descending" }]
        }
      ],
      "layer": [
        {
          "mark": { "type": "point", "point": true, "color": "black" },
          "encoding": {
            "x": { "field": "Year", "type": "ordinal" },
            "y": { "field": "ranking", "type": "ordinal" },
            "order": { "field": "Year", "type": "ordinal" }
          }
        },
        {
          "mark": { "type": "text", "color": "black" },
          "encoding": { "text": { "field": "Country" } }
        }
      ]
      
    }
  ]
}

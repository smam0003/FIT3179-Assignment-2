{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Athletes to Medals Won",
  "width": "container",
  "height": 500,
  "description": "Scatterplot",
  "data": {
    "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/data/Total_Medals_Rankings_By_Continent/summer_paralympics_with_continents.csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2020,
        "step": 4,
        "name": "Year:  "
      }
    },
    {
      "name": "Select_medal",
      "bind": {
        "input": "select",
        "options": [null, "M_Total", "Gold", "Silver", "Bronze"],
        "labels": [
          "Select one",
          "Total Medals",
          "Gold Medals",
          "Silver Medals",
          "Bronze Medals"
        ],
        "name": "Select Medal Type: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Year == Year_selection" },
    { "fold": ["M_Total", "Gold", "Silver", "Bronze"], "as": ["key", "value"] },
    { "filter": "datum.key == Select_medal" },
    {
      "calculate": "datum.value / datum.P_Total",
      "as": "Ratio"
    }
  ],
  "encoding": {
    "x": {
      "field": "P_Total",
      "type": "quantitative",
      "title": "Number of Athletes",
      "axis": {
        "grid": false,
        "labelFontSize": 18,
        "titleFontSize": 18,
        "values": [0, 5, 10, 20, 50, 100, 150, 200]
      },
      "scale": { "type": "symlog" }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Medals Won",
      "axis": {
        "grid": false,
        "labelFontSize": 18,
        "titleFontSize": 18,
        "values": [0, 5, 10, 20, 50, 100, 150, 200, 260]
      },
      "scale": { "type": "symlog" }
    }
  },
  "layer": [
    {
      "params": [
        {
          "name": "Highlight_continent",
          "select": { "type": "point", "fields": ["Continent"] },
          "bind": "legend"
        }
      ],
      "mark": {
        "type": "point",
        "filled": true,
        "size": 135
      },
      "encoding": {
        "color": {
          "field": "Continent",
          "legend": {
            "title": "Continents (Click to Filter)",
            "orient": "bottom",
            "titleFontSize": 12,
            "symbolSize": 300
          },
          "scale": {
            "range": [
              "#1b9e77",
              "#d95f02",
              "#7570b3",
              "#e7298a",
              "#66a61e",
              "#e6ab02",
              "#a6761d"
            ]
          }
        },
        "opacity": {
          "condition": { "param": "Highlight_continent", "value": 1 },
          "value": 0.15
        },
        "tooltip": [
          { "field": "Country", "type": "nominal" },
          { "field": "Continent", "type": "nominal" },
          { "field": "value", "type": "quantitative", "title": "Medals" },
          {
            "field": "P_Total",
            "type": "quantitative",
            "title": "Total Athletes"
          },
          {
            "field": "Ratio",
            "type": "quantitative",
            "format": ".2f",
            "title": "Medal to Athlete Ratio"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "baseline": "middle",
        "align": "right",
        "dx": -10,
        "fontSize": 13.5,
        "fontStyle": "italic", "fontWeight":"bolder"
      },
      "encoding": {
        "text": { "field": "Country", "type": "nominal" },
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'People\\'s Republic of China' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand'|| datum['Country'] == 'Italy' || datum['Country'] == 'United States of America'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {
    "title": { "fontSize": 20, "anchor": "start" },
    "background": "aliceblue",
    "autosize": { "resize": true },
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}

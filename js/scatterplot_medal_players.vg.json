{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Athletes to Medals Won",
  "width": "container",
  "height": 500,
  "description": "Scatterplot",
  "data": {
    "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/data/Total_Medals_Rankings_By_Continent/summer_paralympics_with_continents.csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2020,
        "step": 4,
        "name": "Year:  "
      }
    },
    {
      "name": "Highlight_continent",
      "select": { "type": "point", "fields": ["Continent"] },
      "bind": "legend"
    },
    {
      "name": "Select_medal",
      "bind": {
        "input": "select",
        "options": [null, "M_Total", "Gold", "Silver", "Bronze"],
        "labels": [
          "Select one",
          "Total Medals",
          "Gold Medals",
          "Silver Medals",
          "Bronze Medals"
        ],
        "name": "Select Medal Type: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Year == Year_selection" },
    { "fold": ["M_Total", "Gold", "Silver", "Bronze"], "as": ["key", "value"] },
    { "filter": "datum.key == Select_medal" },
    {
      "calculate": "datum.value / datum.P_Total",
      "as": "Ratio"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true,
        "size": 75
      },
      "encoding": {
        "x": {
          "field": "P_Total",
          "type": "quantitative",
          "title": "Player Count",
          "axis": { "grid": false }, "scale":{"type":"symlog"}
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "title": "Medal Count",
          "axis": { "grid": false}, "scale":{"type":"symlog"}
        },
        "color": {
          "field": "Continent",
          "scale": {
            "range": [
              "#1b9e77",
              "#d95f02",
              "#7570b3",
              "#e7298a",
              "#66a61e",
              "#e6ab02",
              "#a6761d"
            ]
          }
        },
        "opacity": {
          "condition": { "param": "Highlight_continent", "value": 1 },
          "value": 0.1
        },
        "tooltip": [
          {
            "field": "Ratio",
            "type": "quantitative",
            "format": ".2f",
            "title": "Medal to Athlete Ratio"
          },
          { "field": "Country", "type": "nominal" },
          {
            "field": "P_Total",
            "type": "quantitative",
            "title": "Total Athletes"
          },
          { "field": "value", "type": "quantitative", "title": "Medals" },
          { "field": "Continent", "type": "nominal" }
        ]
      }
    }
  ],
  "config": {
    "title": { "fontSize": 20, "anchor": "start" },
    "background": "aliceblue",
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}

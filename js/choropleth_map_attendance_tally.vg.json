{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Athletes in Paralympics 2020",
  "width": 800,
  "height": 600,
  "projection": {
    "type": "equirectangular"
  },

  "params": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2020,
        "step": 4,
        "name": "Year:  "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/js/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": { "tooltip": { "field": "note" } }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/data/Normalised%20Para%201960-2020/summer_paralympics.csv"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/js/ne_110m_admin_0_countries.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        { "filter": "datum.Year == Year_selection" }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 0.5 },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "P_TotalPer10MPop",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 2, 5, 10, 50, 100],
            "range": [
              "#f0f9e8",
              "#ccebc5",
              "#a8ddb5",
              "#7bccc4",
              "#43a2ca",
              "#0868ac"
            ]
          }
        },
        "tooltip": [
          { "field": "Country", "type": "nominal", "title": "Country" },
          {
            "field": "P_TotalPer10MPop",
            "type": "quantitative",
            "title": "Total Per 10M Population"
          },
          { "field": "Year", "type": "quantitative", "title": "Year" }
        ]
      }
    }
  ]
}

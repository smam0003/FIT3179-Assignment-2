{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Athletes in Paralympics 1960-2020",
  "width": "container",
  "height": 500,
  "projection": {
    "type": "equirectangular"
  },

  "params": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2020,
        "step": 4,
        "name": "Year:  "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/js/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": { "tooltip": { "field": "note" } }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/data/Total_Medals_Rankings_By_Continent/summer_paralympics_with_continents.csv"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/js/ne_110m_admin_0_countries.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        { "filter": "datum.Year == Year_selection" },
        {
          "calculate": "'Host Country: ' + datum.Host_Country",
          "as": "host_country"
        },
        {
          "calculate": "datum.P_TotalPer10MPop",
          "as": "Athletes Per 10M Population"
        }
      ],

      "layer": [
        {
          "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 0.5 },
          "encoding": {
            "shape": { "field": "geo", "type": "geojson" },
            "color": {
              "field": "Athletes Per 10M Population",
              "type": "quantitative",
              "scale": {
                "type": "symlog",
                "domain": [1, 2, 5, 10, 50, 100],
                "range": [
                  "#ffffcc",
                  "#c7e9b4",
                  "#7fcdbb",
                  "#41b6c4",
                  "#2c7fb8",
                  "#000099"
                ]
              }
            },
            "tooltip": [
              { "field": "Country", "type": "nominal", "title": "Country" },
              {
                "field": "Athletes Per 10M Population",
                "type": "quantitative",
                "title": "Total Per 10M Population"
              },
              { "field": "Year", "type": "quantitative", "title": "Year" }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "dy": 200,
            "fontSize": 16
          },
          "encoding": { "text": { "field": "host_country" } }
        }
      ]
    }
  ],
  "config": {
    "font": "Open Sans",
    "title": { "fontSize": 20, "anchor": "start" },
    "background": "aliceblue",
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}

{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Athletes in Paralympics 1960-2020",
  "width": "container",
  "height": 500,
  "projection": {
    "type": "equirectangular"
  },

  "params": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2020,
        "step": 4,
        "name": "Year:  "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/js/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black",
        "strokeWidth": 0.2
      },
      "encoding": { "tooltip": { "field": "note" } }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/data/Total_Medals_Rankings_By_Continent/summer_paralympics_with_continents.csv"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/smam0003/FIT3179-Assignment-2/main/js/ne_110m_admin_0_countries.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        { "filter": "datum.Year == Year_selection" },
        {
          "calculate": "'Host Country: ' + datum.Host_Country",
          "as": "host_country"
        }
      ],
      
      "layer": [
        {
          "mark": { "type": "geoshape", "stroke": "black", "strokeWidth": 0.2 },
          "encoding": {
            "shape": { "field": "geo", "type": "geojson" },
            "color": {
              "field": "P_TotalPer10MPop",
              "type": "quantitative",
              "legend": {
                "title": "Athletes Per 10M Population",
                "values": [1, 5, 20, 50, 100, 150],
                "orient": "bottom-left",
                "gradientLength": 200,
                "titleFontSize": 12
              },
              "scale": {
                "type": "symlog",
                "domain": [1, 2, 5, 10, 50, 150],
                "range": [
                  "#feedde",
                  "#fdd0a2",
                  "#fdae6b",
                  "#fd8d3c",
                  "#e6550d",
                  "#a63603"
                ]
              }
            },
            "tooltip": [
              { "field": "Country", "type": "nominal", "title": "Country" },
              {
                "field": "P_TotalPer10MPop",
                "type": "quantitative",
                "title": "Total Per 10M Population"
              },
              { "field": "Year", "type": "quantitative", "title": "Year" }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "fontSize": 16,
            "fontStyle": "italic",
            "baseline": "top",
            "dy": 200
          },
          "encoding": { "text": { "field": "host_country" } }
        }
      ]
    }
  ],
  "config": {
    "title": { "fontSize": 20, "anchor": "start" },
    "background": "aliceblue",
    "autosize": { "resize": true },
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}
